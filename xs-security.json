{
    "xsappname": "wd2pdsaas",
    "tenant-mode": "shared",
    "scopes": [
        {
            "name": "$XSAPPNAME.mtcallback",
            "description": "SaaS Provisioning",
            "grant-as-authority-to-apps": [
                "$XSAPPNAME(application,sap-provisioning,tenant-onboarding)"
            ]
        },
        {
            "name": "$XSAPPNAME.mtdeployment",
            "description": "SaaS Model Upgrade"
        },
        {
            "name": "uaa.user",
            "description": "UAA"
        },
        {
            "name": "$XSAPPNAME.Service",
            "description": "Service Access "
        },
        {
            "name": "$XSAPPNAME.Workers",
            "description": "Workers"
        },
        {
            "name": "$XSAPPNAME.Organizations",
            "description": "Organizations"
        },
        {
            "name": "$XSAPPNAME.Users",
            "description": "Users"
        }
    ],
    "role-templates": [
        {
            "name": "Token_Exchange",
            "description": "UAA Token Exchange",
            "scope-references": [
                "uaa.user"
            ]
        },
        {
            "name": "Service",
            "description": "Service Access",
            "scope-references": [
                "$XSAPPNAME.Service"
            ],
            "attribute-references": []
        },
        {
            "name": "Workers",
            "description": "Role for Workers Integrations",
            "scope-references": [
                "$XSAPPNAME.Workers"
            ]
        },
        {
            "name": "Organizations",
            "description": "Role for Organizations Integrations",
            "scope-references": [
                "$XSAPPNAME.Organizations"
            ]
        },
        {
            "name": "Users",
            "description": "Role for Users Integrations",
            "scope-references": [
                "$XSAPPNAME.Users"
            ]
        }
    ],
    "role-collections": [
        {
            "name": "wd2pdsaas_Service",
            "description": "Service access",
            "role-template-references": [
                "$XSAPPNAME.Service"
            ]
        },
        {
            "name": "wd2pdsaas_Workers",
            "description": "Workers apps Access",
            "role-template-references": [
                "$XSAPPNAME.Workers"
            ]
        },
        {
            "name": "wd2pdsaas_Organizations",
            "description": "Organizations apps Access",
            "role-template-references": [
                "$XSAPPNAME.Organizations"
            ]
        },
        {
            "name": "wd2pdsaas_Users",
            "description": "Users apps Access",
            "role-template-references": [
                "$XSAPPNAME.Users"
            ]
        }
