{
    "name": "wd2pdsaasdev",
    "version": "1.0.1",
    "description": "Business Application",
    "engines": {
        "node": "12.x"
    },
    "dependencies": {
        "@sap/audit-logging": "^5",
        "@sap/cds": "^5",
        "@sap/cds-mtx": "^2",
        "@sap/cds-odata-v2-adapter-proxy": "^1",
        "@sap/hana-client": "^2",
        "@sap/xsenv": "^3",
        "@sap/xssec": "^3.2.10",
        "cfenv": "^1",
        "debug": "^4.3",
        "express": "^4",
        "passport": "^0.4.1",
        "xml2js": "^0.4.23"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.90.0",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "npx cds run"
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[development]": {
                    "strategy": "mock",
                    "users": {
                        "joe": {},
                        "julie": {},
                        "bob": {}
                    }
                }
            },
            "db": {
                "[production]": {
                    "kind": "hana",
                    "pool": {
                        "acquireTimeoutMillis": 5000,
                        "min": 0,
                        "max": 100
                    }
                },
                "[development]": {
                    "kind": "sql"
                },
                "model": [
                    "db",
                    "srv"
                ],
                "vcap": {
                    "label": "service-manager"
                }
            },
            "multitenancy": true
        },
        "mtx": {
            "api": {
                "provisioning": true,
                "metadata": true,
                "model": true
            },
            "element-prefix": [
                "Z_",
                "ZZ_"
            ],
            "namespace-blocklist": [
                "com.sap.",
                "sap.",
                "wd2pdsaasdev."
            ],
            "extension-allowlist": [
                {
                    "for": [
                        "*"
                    ]
                },
                {
                    "for": [
                        "IntegrationService"
                    ],
                    "kind": "service"
                }
            ]
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/workerslist"
    ]
}
