<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<ViewSettingsDialog id="viewSettingsDialog" confirm=".onConfirmViewSettingsDialog" cancel="handleCancel" sortDescending="true"
		resetFilters=".handleResetFilters">
		<sortItems>
			<ViewSettingsItem text="{i18n>masterSort1}" key="status" selected="false"/>
			<ViewSettingsItem text="{i18n>masterSort2}" key="timestamp_start" selected="true"/>
			<ViewSettingsItem text="{i18n>masterSort4}" key="numberOfSeconds" selected="false"/>
		</sortItems>
		<filterItems>
			<ViewSettingsCustomItem id="idCustomFilterItem" text="{i18n>viewFragmentLabel1}" key="timestamp_start">
				<customControl>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<Label text="{i18n>viewFragmentLabel2}"/>
						<DateTimePicker id="DTP1" value="" valueFormat="yyyy-MM-dd-HH-mm-ss" displayFormat="long" change="changeDates"
							class="sapUiSmallMarginBottom"/>
						<Label text="{i18n>viewFragmentLabel3}"/>
						<DateTimePicker id="DTP2" value="" valueFormat="yyyy-MM-dd-HH-mm-ss" displayFormat="long" change="changeDates"
							class="sapUiSmallMarginBottom"/>
					</l:VerticalLayout>
				</customControl>
			</ViewSettingsCustomItem>
			<ViewSettingsFilterItem text="{i18n>viewFragmentLabel4}" key="status">
				<items>
					<ViewSettingsItem text="{i18n>viewFragmentLabel5}" key="S"/>
					<ViewSettingsItem text="{i18n>viewFragmentLabel6}" key="E"/>
					<ViewSettingsItem text="{i18n>viewFragmentLabel7}" key="W"/>
					<ViewSettingsItem text="{i18n>viewFragmentLabel8}" key="R"/>
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>